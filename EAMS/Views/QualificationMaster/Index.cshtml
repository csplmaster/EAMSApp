@model IEnumerable<EAMS.View_Models.QualificationMasterIndxVM>

@{
    ViewBag.Title = "List of Qualifications";
}
<div class="page-body">
    <div class="card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <i class="icofont icofont-rounded-down"></i>
                <a href="@Url.Action("Create", "QualificationMaster")" title="Click here to create a New Vacancy"><i class="fa fa-plus"></i></a>
            </div>
        </div>
        <div class="card-block">
            <table class="table table-striped table-bordered w-100" id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.QualificationTypeString)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QualificationLevelString)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Qualification)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.QualificationTypeString)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QualificationLevelString)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Qualification)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "QualificationMaster", new { id = item.QualificationId })"><i class="fa fa-edit"></i></a>
                            <button type="button" class="btn btn-transparent red btn-xs" onclick="Delete(@item.QualificationId, this)"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        LoadJDT('myTable');

        function Delete(id, event) {
            var TableId = "myTable";
            var Jsonurl = "/QualificationMaster/DeleteOnConfirm";
            DeleteJDTRow(id, event, TableId, Jsonurl)
        }
    </script>
}
