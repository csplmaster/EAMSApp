@model IEnumerable<EAMS.View_Models.PBORsponserDetailsIndxVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = null;
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
@*<link href="~/Content/icon/font-awesome/css/font-awesome.min.css" rel="stylesheet" />*@

<div>
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h2 class="panel-title list-panel-title">Sponsership Entry Details</h2>
            </div>            
            <p>
                &nbsp;&nbsp;<button type="button" class="btn btn-success btn-round btn-md" onclick="location.href='@Url.Action("Create", "PBORSponsorship")'"><i class="fa fa-plus"> New</i>  </button>
            </p>
            <div class="panel-body">
                <table class="table table-striped table-bordered" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SponsEmpType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Companies.CompanyName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.panelNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactPersonName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Designation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Post)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalVacancy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalESMSponsered)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SponserDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ContactNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FeedBack)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NACIssued)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remarks)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.SponsEmpType != null)
                                    {
                                        if (item.SponsEmpType == "O")
                                        {
                                            //Html.Display("Officer");
                                            <text>Officer</text>
                                        }
                                        else if (item.SponsEmpType == "J")
                                        {
                                            //Html.Display("JCO");
                                            <text>JCO</text>
                                        }
                                        else if (item.SponsEmpType == "R")
                                        {
                                            //Html.Display("OR");
                                            <text>OR</text>
                                        }
                                    }
                                    @*@Html.DisplayFor(modelItem => item.SponsEmpType)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Companies.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.panelNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactPersonName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Post)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalVacancy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalESMSponsered)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SponserDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FeedBack)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NACIssued)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remarks)
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "PBORSponsorship", new { id = item.SponsorshipId })"><i class="fa fa-pencil fa-lg"></i></a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "PBORSponsorship", new { id = item.SponsorshipId })"><i class="fa fa-trash fa-lg"></i></a>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.SponsorshipId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.SponsorshipId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.SponsorshipId })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- jQuery -->
@*<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.4.js"></script>*@



@section Scripts
{
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                "scrollX": true
            });
        });
</script>
}
