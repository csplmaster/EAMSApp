@model IEnumerable < EAMS.View_Models.RegsESMOffrsIndexVM>


@{
    ViewBag.Title = "List of Registered Officers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="page-body">
        <div class="card">
            <div class="card-header">
                <h5>@ViewBag.Title</h5>
                <div class="card-header-right">
                    <a href="@Url.Action("Create", "RegistrationEMPOffrs")" title="Click here to Register an Officer" class="btn btn-success btn-sm"><i class="fa fa-plus"></i></a>
                    <i class="icofont icofont-rounded-down"></i>
                </div>
            </div>
            <div class="card-block">
                <table class="table table-striped table-bordered w-100" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ServiceType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ServiceNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RankId)
                            </th>
                            <th>
                               Name
                            </th>
                            <th>
                                Father Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DOB)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Religion)
                            </th>
                            <th>
                                Qualifications
                            </th>
                            <th>
                                Addl Qualification
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ranks.RankName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName) 
                                    @Html.DisplayFor(modelItem => item.MiddleName) 
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FatherName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DOB)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Religion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Qualifications.QualificationTypeString)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdditionalQualification)
                                </td>
                                <td>
                                    @*<a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "QualificationMaster", new { id = item.QualificationId })"><i class="fa fa-pencil fa-lg"></i></a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "QualificationMaster", new { id = item.QualificationId })"><i class="fa fa-trash fa-lg"></i></a>*@
                                    <a href="@Url.Action("Edit", "RegistrationEMPOffrs", new { id = item.RegistrationId })"><i class="fa fa-edit"></i></a>
                                    <button type="button" class="btn btn-transparent red btn-xs" onclick="Delete(@item.RegistrationId, this)"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@section Scripts
{
    <script type="text/javascript">
       LoadJDT('myTable');
        function Delete(id, event) {
            var TableId = "myTable";
            var Jsonurl = "/RegistrationEMPOffrs/DeleteOnConfirm";
            DeleteJDTRow(id, event, TableId, Jsonurl)
        }
    </script>
}
