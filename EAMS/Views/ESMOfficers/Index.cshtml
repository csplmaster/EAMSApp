@model IEnumerable<EAMS.View_Models.ESMOfficersDetailVM>

@{
    ViewBag.Title = "List of ESM Officers";
}
    <div class="page-body">
        <div class="card">
            <div class="card-header">
                <h5>@ViewBag.Title</h5>
                <div class="card-header-right">
                    <a href="@Url.Action("Create", "ESMOfficers")" title="Click here to create enter details of officer" class="btn btn-success btn-sm"><i class="fa fa-plus"></i></a>
                    <i class="icofont icofont-rounded-down"></i>
                </div>
            </div>
            <div class="card-block">
                <table class="table table-striped table-bordered w-100" id="myTable">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Post Name</th>
                            <th>ServiceNo</th>
                            <th>Name</th>
                            <th>DgrRegistrationNo</th>
                            <th>Address</th>
                            <th>ContactNo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Companys.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.VacancyId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DgrRegistrationNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "ESMOfficersDetail", new { id = item.EsmId })"><i class="fa fa-pencil fa-lg"></i></a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "ESMOfficersDetail", new { id = item.EsmId })"><i class="fa fa-trash fa-lg"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@section Scripts {
    <script>
            LoadJDT('myTable');

            function Delete(id, event) {
                var TableId = "myTable";
                var Jsonurl = "/ESMOfficersDetail/DeleteOnConfirm";
                DeleteJDTRow(id, event, TableId, Jsonurl)
            }
    </script>
}
