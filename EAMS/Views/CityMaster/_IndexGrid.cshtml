@model IEnumerable<EAMS.View_Models.CityMasterVM>
@using NonFactors.Mvc.Grid

    @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.States.StateName).Titled("State").Sortable(true);
        columns.Add(model => model.CityName).Titled("City");
        columns.Add(model => model.CodeName).Titled("Code");
        columns.Add()
        .Titled("Edit")
        .RenderedAs(o => Html.ActionLink("Edit", "Edit", new { id = o.CityId }));
        columns.Add()
        .Titled("Delete")
        .RenderedAs(o => Html.ActionLink("Delete", "Delete", new { id = o.CityId }));
    })
    .UsingFilterMode(GridFilterMode.Excel)
    .Empty("No data found")
    .Id("my-ajax-grid")
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 2;
        pager.RowsPerPage = 10;
    })
    .Filterable()
    .Sortable()
    )
