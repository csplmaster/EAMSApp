@model IEnumerable<EAMS.View_Models.CityMasterVM>

@{
    ViewBag.Title = "List of Cities";
}
<div class="page-body">
    <div class="card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <i class="icofont icofont-rounded-down"></i>
                <a href="@Url.Action("Create", "CityMaster")" title="Click here to create a New State"><i class="fa fa-plus"></i></a>
            </div>
        </div>
        <div class="card-block">
            <table class="table table-striped table-bordered w-100" id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.States.StateName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CityName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CodeName)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.States.StateName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CodeName)
                            </td>
                            <td>
                                @*@Html.EncodedActionLink("<i class='fa fa-edit'></i>", "Edit", "CityMaster", new { id = item.CityId }, null)*@
                                <a href="@Url.Action("Edit", "CityMaster", new { id = item.CityId })"><i class="fa fa-edit"></i></a>
                                <button type="button" class="btn btn-transparent red btn-xs" onclick="Delete(@item.CityId, this)"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        LoadJDT('myTable');

        function Delete(id, event) {
            var TableId = "myTable";
            var Jsonurl = "/CityMaster/DeleteOnConfirm";
            DeleteJDTRow(id, event, TableId, Jsonurl)
        }
    </script>
}