@model IEnumerable<EAMS.View_Models.NotingMasterVM>

@{
    ViewBag.Title = "Index";
}
<div class="page-body">
    <div class="card">
        <div class="card-header">
            <h5>@ViewBag.Title</h5>
            <div class="card-header-right">
                <i class="icofont icofont-rounded-down"></i>
                <a href="@Url.Action("Create", "NotingDetails")" title="Click here to create a New Vacancy"><i class="fa fa-plus"></i></a>
            </div>
        </div>
        <div class="card-block">
            <table class="table table-striped table-bordered w-100" id="myTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Company.CompanyName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Vacancies.PostName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LetterNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LetterDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Remarks)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Company.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vacancies.PostName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LetterNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LetterDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "NotingDetails", new { id = item.NotingId })"><i class="fa fa-edit"></i></a>
                                <button type="button" class="btn btn-danger btn-sm" onclick="Delete(@item.NotingId, this)"><i class="fa fa-trash fa-lg"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

    @section scripts {
        <script>
        LoadJDT('myTable');

        function Delete(id, event) {
            var TableId = "myTable";
            var Jsonurl = "/NotingDetails/DeleteOnConfirm";
            DeleteJDTRow(id, event, TableId, Jsonurl)
        }
        </script>
    }


