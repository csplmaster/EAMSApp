@model IEnumerable<EAMS.View_Models.CompanyMasterIndexVM>


    @{
        ViewBag.Title = "List of Companies";
    }


    <div class="page-body">
        <div class="card">
            <div class="card-header">
                <h5>@ViewBag.Title</h5>
                <div class="card-header-right">
                    <i class="icofont icofont-rounded-down"></i>
                    <a href="@Url.Action("Index", "EmployerDetails")" title="Click here to create branch"><i class="fa fa-building"></i></a>
                    <a href="@Url.Action("Create", "CompanyMaster")" title="Click here to create a New Company"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div class="card-block">
                <table class="table table-striped table-bordered w-100" id="myTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                            <th>@Html.DisplayNameFor(model => model.CompanyType)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyType)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "CompanyMaster", new { id = item.CompanyId })"><i class="fa fa-edit"></i></a>
                                    <button type="button" class="btn btn-transparent red btn-xs" onclick="Delete(@item.CompanyId, this)"><i class="fa fa-trash"></i></button>
                                    <a href="@Url.Action("Create", "EmployerDetails")" title="Click Create Branch"><i class="fa fa-building"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    @section Scripts {
        <script>
            LoadJDT('myTable');

            function Delete(id, event) {
                var TableId = "myTable";
                var Jsonurl = "/CompanyMaster/DeleteOnConfirm";
                DeleteJDTRow(id, event, TableId, Jsonurl)
            }
        </script>
    }
