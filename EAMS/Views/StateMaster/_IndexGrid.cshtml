@model IEnumerable<EAMS.View_Models.StateMasterVM>
@using NonFactors.Mvc.Grid

    @(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.StateName).Titled("State").Sortable(true);
        columns.Add()
        .Titled("Edit")
        .RenderedAs(o => Html.ActionLink("Edit", "Edit", new { id = o.StateId }));
        columns.Add()
        .Titled("Delete")
        .RenderedAs(o => Html.ActionLink("Delete", "Delete", new { id = o.StateId }));
    })
    .UsingFilterMode(GridFilterMode.Excel)
    .Empty("No data found")
    .Id("my-ajax-grid")
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 2;
        pager.RowsPerPage = 10;
    })
    .Filterable()
    .Sortable()
    )
